{
  "root": true,
  "env": {
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": { "sourceType": "module" },
  "rules": {
    "max-classes-per-file": "off",
    "no-unused-vars": ["off", { "vars": "local" }],
    "no-plusplus":"off",
    "no-console":"off",
    "no-param-reassign":"off",
    "no-use-before-define":"off"
  }
}